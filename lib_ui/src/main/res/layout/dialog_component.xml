<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/buttonClose"
        style="@style/ClickableContent"
        android:layout_width="@dimen/dimens_48dp"
        android:layout_height="@dimen/dimens_48dp"
        android:layout_gravity="end"
        android:padding="@dimen/dimens_16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_close_24"
        android:tint="@color/colorTextPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimens_16dp">

        <ImageView
            android:id="@+id/imageContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_184dp"
            android:layout_marginBottom="@dimen/dimens_16dp"
            android:padding="@dimen/dimens_12dp"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <id.radhika.lib.ui.component.LabelComp
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:layout_marginBottom="@dimen/dimens_16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/size_20sp"
            tools:text="Pendaftaran Berhasil" />

        <id.radhika.lib.ui.component.LabelComp
            android:id="@+id/subTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:letterSpacing="0.05"
            android:layout_marginBottom="@dimen/dimens_12dp"
            android:lineSpacingExtra="2dp"
            android:maxLines="4"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/size_12sp"
            tools:text="Selanjutnya kamu bisa masuk menggunakan akun yang baru saja kamu buat" />

        <id.radhika.lib.ui.component.LabelComp
            android:id="@+id/labelClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_24dp"
            android:ellipsize="end"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="2dp"
            android:maxLines="4"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/size_12sp"
            tools:text="Selanjutnya kamu bisa masuk menggunakan akun yang baru saja kamu buat" />

        <id.radhika.lib.ui.component.LabelComp
            android:id="@+id/buttonOk"
            style="@style/ClickableContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingStart="@dimen/dimens_16dp"
            android:paddingTop="@dimen/dimens_8dp"
            android:paddingEnd="@dimen/dimens_16dp"
            android:paddingBottom="@dimen/dimens_8dp"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:text="OK"
            android:textColor="@color/colorWarmOrange"
            tools:visibility="visible" />

    </LinearLayout>
</FrameLayout>